<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" thread-count="3" parallel="classes">

     <listeners>
		<listener class-name="extendReport.ExtentTestNGIReporterListener" />
	</listeners>
	
  <test  name="ChromeTest">
  <parameter name="browser" value="Chrome"/>
    <classes>
    
      <class name="Amazon.VerifyAllHeader"/>
        <class name="Amazon.VerifyAllFooter"/>
         <class name="Amazon.CustomerService"/>
    </classes>
  </test> <!-- Test -->
  
   <test  name="IETest">
  <parameter name="browser" value="Firefox"/>
    <classes>
        <class name="Amazon.VerifyAllHeader"/>
        <class name="Amazon.VerifyAllFooter"/>
         <class name="Amazon.CustomerService"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
